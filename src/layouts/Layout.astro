---
import Logo from "../assets/logo.svg";
import "../global.css";
import ThreeScene from "../components/three/ThreeScene";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="relative">
    <div
      class="absolute left-0 min-w-[50px] w-[300px] border-r-[4px] border-slate-800 h-screen"
    >
      <div class="w-full h-[200px]"></div>
      <ul>
        <li
          class="w-full border-b-[1px] border-slate-800 text-slate-700 p-5 text-thin text-2xl"
        >
          Animation
        </li>
      </ul>
    </div>
    <div class="left-[300px] absolute top-0">
      <slot />
    </div>
  </body>
</html>
